{% extends 'base.html.twig' %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('css/accueil.css') }}">
{% endblock %}

{% block title %}Gestion sites{% endblock %}

{% block body %}
    <div class="container-fluid">
        <h2>Gestion des sites</h2>
        <hr>
        <h3>Filtrer les sites</h3>
        {# Formulaire pour le filtre #}
        <form class="row align-items-center" method="get" action="{{ path('gestion_sites') }}">
            {# Recherche "Nom du site" #}
            <div class="row align-items-center">
                <div class="col-auto">
                    <div class="input-group">
                        <label for="site" class="col-form-label input-group-text">üîç</label>
                        <input id="site" name="site" type="text" class="form-control">
                    </div>
                </div>
                {# Selecteur de ville #}
                <div class="col-auto">
                    <div class="input-group">
                        <label for="ville" class="col-form-label input-group-text">Ville</label>
                        <select id ="ville" name="ville" class="form-select">
                            <option value="0" selected>Toute les villes</option>
                            {% for ville in villes %}
                            <option value="{{ ville.id }}">{{ ville.nom }}</option>
                            {% endfor %}
                        </select>
                    </div>
                </div>
                {# Bouton "Rechercher" #}
                <div class="col-auto">
                    <button type="submit" class="btn btn-primary">Rechercher</button>
                </div>
            </div>
        </form>
        <hr>
        {% if site.id %}
            <h3>Modifier un site</h3>
        {% else %}
            <h3>Ajouter un site</h3>
        {% endif %}
        {{ form_start(siteView) }}
        {{ form_errors(siteView) }}
        {# Formulaire pour ajouter une ville #}
        <div class="row align-items-center">
            <div class="col-auto">
                <div class="input-group">
                    {{ form_label(siteView.nom) }}
                    {{ form_widget(siteView.nom) }}
                    {{ form_errors(siteView.nom) }}
                </div>
            </div>
            {# Bouton "Ajouter une ville" #}
            <div class="col-auto">
                <div class="row">
                    <div class="col">
                        <button type="submit" class="btn btn-primary md-3">Valider</button>
                    </div>
                    {% if site.id %}
                    <div class="col">
                        <a type="button" class="btn btn-danger md-3"
                           href="{{ path('gestion_sites')}}">Annuler</a>
                    </div>
                    {% endif %}
                </div>
            </div>
        </div>
        <div>
            {#        Messages d'erreur / Succ√®s #}
            {% for categorie, messages in app.flashes %}
                {% for message in messages %}
                    <div class="flash flash-{{ categorie }}">
                        {{ message }}
                    </div>
                {% endfor %}
            {% endfor %}
        </div>
        {{ form_end(siteView) }}
        <hr>
        {# Tableau #}
        <div id="table" class="row align-items-center table-wrapper-scroll-y my-custom-scrollbar table-hover table-responsive container-fluid">
            <table class="table table-bordered table-striped">
                <thead>
                <tr>
                    <th scope="col">Site</th>
                    <th scope="col">Action</th>
                </tr>
                </thead>
                <tbody>
                {% for s in sites %}
                    <tr>
                        <td>{{ s.nom }}</td>
                        <td>
                            <div class="row">
                                <div class="col-auto">
                                    <a type="button" class="btn btn-warning btn-sm"
                                       href="{{ path('gestion_sites', {'id':s.id}) }}">Modifier</a>
                                </div>
                                <div class="col-auto">
                                    <div class="btn btn-danger btn-sm" onclick="del('{{ path('gestion_sites_delete', {'id': s.id}) }}')">Supprimer</div>
                                </div>
                            </div>
                        </td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    <script>
        function del(route) {
            const oReq = new XMLHttpRequest();
            oReq.onload = setTimeout(document.location.reload(true), 1000);
            oReq.open("delete", route, true);
            oReq.send();
        }
    </script>
{% endblock %}
