{% extends 'base.html.twig' %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('css/accueil.css') }}">
{% endblock %}

{# Title #}
{% block title %}Accueil{% endblock %}

{# Body #}
{% block body %}
    {% if app.user and app.user.actif %}
        <div class="container-fluid">
            {# Premi√®re ligne : Date du jour et participant #}
            <div class="row align-items-center">
                <div class="col-9"></div>
                <div class="col-3">
                    <p>
                        <b><label>Date du jour :</label><span> {{ currentDate }}</span></b>
                    </p>
                    <p>
                        <b><label>Participant : </label><span> {{ app.user.nom }} {{ app.user.prenom}}</span></b>
                    </p>
                </div>
            </div>
            <hr>
            {# Deuxi√®me ligne: Filtrer les sorties #}
            <h2>Filtrer les sorties</h2>
            <form class="row align-items-center" method="get" action="{{ path('app_main') }}">
                {# Colonne 1 : Select site #}
                <div class="col-6">
                    <div class="row align-items-center">
                        <div class="col-auto">
                            <label for="siteSelect" class="col-form-label">Site : </label>
                        </div>
                        <div class="col-auto">
                            <select id="siteSelect" name="siteSelect" class="form-select">
                                <option value="0">Tous</option>
                                {% for site in sites %}
                                    <option value="{{ site.id }}">{{ site.nom }}</option>
                                {% endfor %}
                            </select>
                        </div>
                    </div>
                    {# Recherche nom de la sortie #}
                    <div class="row align-items-center">
                        <div class="col-auto">
                            <label for="nomSortie" class="col-form-label">Le nom de la sortie contient : </label>
                        </div>
                        <div class="col-auto">
                            <div class="input-group mb-3">
                                <span class="col-form-label input-group-text">üîç</span>
                                <input id="nomSortie" name="nomSortie" type="text" class="form-control">
                            </div>
                        </div>
                    </div>
                    {# Selecteur des dates #}
                    <div class="row align-items-center">
                        <div class="col-auto">
                            <label for="dateDebut" class="col-form-label">Entre </label>
                        </div>
                        <div class="col-auto">
                            <input id="dateDebut" name="dateDebut" type="date" class="form-control">
                        </div>
                        <div class="col-auto">
                            <label for="dateFin" class="col-form-label"> et </label>
                        </div>
                        <div class="col-auto">
                            <input id="dateFin" name="dateFin" type="date" class="form-control">
                        </div>
                    </div>
                </div>
                {# Colonne 2 : CheckBox Sortie #}
                <div class="col-4">
                    <div class="form-check">
                        <input id="sortiesOrganisateur" name="sortiesOrganisateur" type="checkbox" class="form-check-input" value="1">
                        <label class="form-check-label" for="sortiesOrganisateur">
                            Sorties dont je suis l'organisateur/trice.
                        </label>
                    </div>
                    <div class="form-check">
                        <input  id="sortiesInscrit" name="sortiesInscrit" type="checkbox" class="form-check-input" value="1">
                        <label class="form-check-label" for="sortiesInscrit">
                            Sorties auxquelles je suis inscrit/e.
                        </label>
                    </div>
                    <div class="form-check">
                        <input id="sortiesNonInscrit" name="sortiesNonInscrit" type="checkbox" class="form-check-input" value="1">
                        <label class="form-check-label" for="sortiesNonInscrit">
                            Sorties auxquelles je ne suis pas inscrit/e.
                        </label>
                    </div>
                    <div class="form-check">
                        <input id="sortiesPassees" name="sortiesPassees" type="checkbox" class="form-check-input" value="1">
                        <label class="form-check-label" for="sortiesPassees">
                            Sorties pass√©es.
                        </label>
                    </div>
                </div>
                {# Colonne 3 : Bouton rechercher #}
                <div class="col-2">
                    <button type="submit" class="btn btn-primary">Rechercher</button>
                </div>
            </form>
            <hr>
            {# Troisi√®me ligne : Bouton cr√©er une sortie #}
            <div id="ligneBoutonCreerSortie" class="row align-items-center">
                <div class="col-auto">
                    <a href="{{ path('sortie_add') }}" class="btn btn-primary btn" role="button">Cr√©er une sortie</a>
                </div>
            </div>
            {% for categorie, messages in app.flashes %}
                {% for message in messages %}
                    <div class="flash flash-{{ categorie }}">
                        {{ message }}
                    </div>
                {% endfor %}
            {% endfor %}
            {# Quatri√®me ligne : Tableau des sorties #}
            <div id="table" class="row align-items-center table-wrapper-scroll-y my-custom-scrollbar">
                <table class="table table-bordered table-striped">
                    <thead>
                        <tr>
                            <th scope="col">Nom de la sortie</th>
                            <th scope="col">Date de la sortie</th>
                            <th scope="col">Cl√¥ture</th>
                            <th scope="col">Inscrits/Places</th>
                            <th scope="col">Etat</th>
                            <th scope="col">Inscrit</th>
                            <th scope="col">Organisateur</th>
                            <th scope="col">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                    {% for s in sorties %}
                        {% set inscrit = false %}
                        {% for i in s.inscriptions %}
                            {% if (user == i.participant) %}
                                {% set inscrit = true %}
                            {% endif %}
                        {% endfor %}
                        <tr>
                            <td>{{ s.nom }}</td>
                            <td>{{ s.dateDebut | date('d/m/Y')}}</td>
                            <td>{{ s.dateClotureInscription | date('d/m/Y')}}</td>
                            <td>{{ s.inscriptions|length }}/{{ s.nbInscriptionsMax }}</td>
                            <td>{{ s.etat.libelle }}</td>
                            {% if inscrit %}
                                <td style="color: #36cf3b; text-align: center; font-size: x-large">‚úì</td>
                            {% else %}
                                <td style="color: #cf3636; text-align: center; font-size: x-large">X</td>
                            {% endif %}
                            <td><a href="{{  path('participant', { 'pseudo': s.participant.pseudo }) }}">{{ s.participant.pseudo }}</a></td>
                            <td>
                                {# Cas 1 : Si on est "consulteur" ou "cr√©ateur" #}
                                <a type="button" class="btn btn-info btn-sm"
                                       href="{{ path('sortie', {'id':s.id }) }}">Afficher</a>
                                {% if user == s.participant %}
                                    <a type="button" class="btn btn-warning btn-sm"
                                       href="{{ path('sortie_modify', {'id':s.id }) }}">Modifier</a>
                                    {% if s.etat.libelle == 'Cr√©√©e' %}
                                        <a type="button" class="btn btn-primary btn-sm"
                                           href="{{ path('sortie_publish', {'id': s.id }) }}">Publier</a>
                                    {% endif %}
                                    {% if s.etat.libelle != 'Annul√©e' and s.etat.libelle != 'Pass√©e' %}
                                        <a type="button" class="btn btn-danger btn-sm"
                                           href="{{ path('sortie_cancel', {'id':s.id }) }}">Annuler</a>
                                    {% endif %}
                                {% else %}
                                    {% if s.etat.libelle == 'Publi√©e' %}
                                        {% if inscrit %}
                                            <a type="button" class="btn btn-warning btn-sm"
                                            href="{{ path('remove_participation', {'idSortie':s.id }) }}">Se d√©sister</a>
                                        {% else %}
                                            <a type="button" class="btn btn-success btn-sm"
                                            href="{{ path('add_participation', {'idSortie':s.id }) }}">S'inscrire</a>
                                        {% endif %}
                                    {% endif %}
                                {% endif %}
                            </td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    {% endif %}
{% endblock %}
