{% extends 'base.html.twig' %}

{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('css/accueil.css') }}">
{% endblock %}

{# Title #}
{% block title %}Accueil{% endblock %}

{# Body #}
{% block body %}
    <div class="container-fluid">
        {# Premi√®re ligne : Date du jour et participant #}
        <div class="row align-items-center">
            <div class="col-9"></div>
            <div class="col-3">
                <p>
                    <b><label>Date du jour :</label><span> Date</span></b>
                </p>
                <p>
